<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ar.uba.fi.talker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.BATTERY_STATS" />
    <uses-permission android:name="android.permission.PERSISTENT_ACTIVITY" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ar.uba.fi.talker.TalkerMainActivity"
            android:icon="@drawable/app_icon"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ar.uba.fi.talker.NewSceneActivity"
            android:icon="@drawable/app_icon"
            android:label="@string/title_activity_new_scene"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="ar.uba.fi.talker.CanvasActivity"
            android:label="@string/new_scene_start"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="ar.uba.fi.talker.HistoricalActivity"
            android:icon="@drawable/app_icon"
            android:label="@string/conversation_history"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="ar.uba.fi.talker.TalkerAndroidDataBase"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="ar.uba.fi.talker.MyPreferenceActivity"
            android:icon="@drawable/app_icon"
            android:label="@string/title_activity_settings"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="ar.uba.fi.talker.MannerOfUseActivity"
            android:icon="@drawable/app_icon"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="ar.uba.fi.talker.NewCategoryImageActivity"
            android:icon="@drawable/app_icon"
            android:label="@string/insert_image_title"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name=".activities.NewCategoryImageActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="ar.uba.fi.talker.NewCategoryContactActivity"
            android:icon="@drawable/app_icon"
            android:label="@string/insert_contact_title"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name=".activities.NewCategoryContactActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="ar.uba.fi.talker.ImageSettingsActivity"
            android:icon="@drawable/app_icon"
            android:label="@string/insert_image_title"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>